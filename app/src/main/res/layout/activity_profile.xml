<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">


    <ImageView
        android:id="@+id/imageButton"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_weight="0.10"
        android:background="@android:color/transparent"
        app:srcCompat="@mipmap/user"
        android:layout_margin="5dp" />

    <TextView
        android:id="@+id/userTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.02"
        android:text="User Profile"
        android:textAlignment="center"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_margin="20dp" />

    <TextView
        android:id="@+id/artistTitle"
        android:layout_width="match_parent"
        android:layout_weight="0.02"
        android:fontFamily=""
        android:text="Favorite Artists"
        android:textAlignment="center"
        android:textSize="30sp"
        android:layout_height="wrap_content" />

    <TextView
        android:text="No favorite artists yet, add one below!"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView7"
        android:layout_weight="0.20"
        android:layout_margin="20dp"
        android:textAlignment="center" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/favArtist1"
        android:layout_weight="0.02"
        android:layout_margin="30dp" />

    <Button
        android:id="@+id/addFavArtist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="addFav"
        android:text="Add a Favorite"
        android:layout_weight="0.02"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp" />


</LinearLayout>